[user]
  name = Federico KnuÌˆssel
  email = fknussel@gmail.com
[push]
  default = current
[alias]
  delete-merged-branches = "!f() { git checkout --quiet develop && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[core]
  excludesfile = /Users/fknussel/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = diff-so-fancy | less --tabs=4 -RFX
  autocrlf = false
  eol = lf
  longpaths = true
[color]
  ui = true
[credential]
  # Windows
  # helper = wincred
  # Mac
  helper = cache --timeout=86400
[help]
  autocorrect = 1
[branch]
  autosetuprebase = always
[branch "develop"]
  rebase = true
[branch "master"]
  rebase = true
[diff]
  submodule = log
[merge]
  conflictstyle = diff3
[remote "origin"]
  prune = true
  tagOpt = --tags
[rebase]
  autosquash = true
  autoStash = true
[pull]
  rebase = true
[tag]
  sort = version:refname
[versionsort]
  suffix = -rc
[commit]
  template = /Users/fknussel/.stCommitMsg
[branch "V2-develop"]
  rebase = true
[github]
  user = fknussel
